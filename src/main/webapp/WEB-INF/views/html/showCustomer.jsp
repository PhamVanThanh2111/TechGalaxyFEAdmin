                                    <th>Name</th>
                                    <th>User Status</th>
                                    <th>Phone</th>
                                    <th>Gender</th>
                                    <th>Date of birth</th>
                                    <th>Avatar</th>
                                    <th>Action</th>
                                </tr>
                                </tfoot>
